<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "mybatis-3-config.dtd" >
<configuration>

    <properties resource="jdbc.properties"/>

    <typeAliases>
        <typeAlias type="cn.gjp0609.ems_v2.entity.Admin" alias="Admin"/>
        <typeAlias type="cn.gjp0609.ems_v2.entity.Dept" alias="Dept"/>
        <typeAlias type="cn.gjp0609.ems_v2.entity.Employee" alias="Employee"/>
    </typeAliases>

    <environments default="oracle">
        <environment id="oracle">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper resource="cn/gjp0609/ems_v2/dao/impl/AdminDaoMapper.xml"/>
        <mapper resource="cn/gjp0609/ems_v2/dao/impl/DeptDaoMapper.xml"/>
        <mapper resource="cn/gjp0609/ems_v2/dao/impl/EmpDaoMapper.xml"/>
    </mappers>
</configuration>